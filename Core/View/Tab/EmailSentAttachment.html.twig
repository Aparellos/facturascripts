{% set firstView = fsc.views | first %}
{% set model = firstView.model %}

{% for attachment in model.getAttachments() %}
    <div class="card mb-3">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <i class="fa-solid fa-paperclip text-secondary mr-1"></i>
                    <span class="d-inline-block text-truncate">{{ attachment.name }}</span>
                </div>
                <div class="d-flex align-items-center">
                    <span class="badge badge-dark">{{ attachment.size }}</span>
                    <a href="{{ attachment.path }}" class="btn btn-sm btn-outline-secondary ml-1" target="_blank" download>
                        <i class="fa-solid fa-download"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endfor %}